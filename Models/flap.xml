<?xml version="1.0"?>

<!-- flap lever -->

<PropertyList>

 <path>seahawk-flap.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>lever</object-name>
  <property>controls/flight/flaps-lever</property>
  <interpolation>
   <entry><ind>0</ind><dep>-45</dep></entry>
   <entry><ind>0.5</ind><dep>0</dep></entry>
   <entry><ind>1</ind><dep>45</dep></entry>
  </interpolation>
  <center>
   <x-m>-0.01</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center> 
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>
 
 <!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>

</PropertyList>
