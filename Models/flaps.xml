<?xml version="1.0"?>

<!-- flap indicator -->

<PropertyList>

 <path>flaps.ac</path>

 <animation>
  <type>rotate</type>
  <object-name>flaps-Needle1</object-name>
  <property>surface-positions/left-flap-pos-norm[0]</property>
  <interpolation>
   <entry><ind>0</ind><dep>0</dep></entry>
   <entry><ind>0.5</ind><dep>90</dep></entry>
   <entry><ind>1</ind><dep>180</dep></entry>
  </interpolation>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.01</z-m>
  </center> 
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

<!-- *** LoD *** -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5</max-m>
 </animation>
</PropertyList>
