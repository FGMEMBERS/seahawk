 <!-- *************** set properties **********************-->

<!--parking brake ON --> 
<!-- nosewheel lock OFF -->
 <controls>
  <gear>
   <parking-brake>1</parking-brake>
   <tailwheel-lock>true</tailwheel-lock>
  </gear>
  <flight>
    <flaps-alternate-extension type="double">1</flaps-alternate-extension>
		<speedbrake-lever type="bool">false</speedbrake-lever>
		<flaps-lever type="double">0</flaps-lever>
	</flight> 
  </controls>
 
 <!-- hsi heading bug and source select-->
 <instrumentation>
    <heading-indicator>
	   <heading-bug-deg type="double">95</heading-bug-deg>
	   <heading-source type="bool">true</heading-source>
    </heading-indicator>
	<dme>
		<frequencies>
			<selected-mhz>115.8</selected-mhz>
		</frequencies>
	</dme>
	<adf>
		<frequencies>
			<selected-khz>379</selected-khz>
			<standby-khz>341</standby-khz>
		</frequencies>
	</adf>
 </instrumentation>
 
 <!-- radio dme switch ON -->
 <radios>
 	<dme>
		<switch-position>1</switch-position>	
	</dme>
 </radios>

<!-- **************** map keyboard input ********************** -->
 <input>
  <keyboard>
  <key n="2">
  <name>Ctrl-B</name>
  <desc>Toggle speedbrake lever.</desc>
  <binding>
    <command>property-toggle</command>
    <property>controls/flight/speedbrake-lever</property>
  </binding>
   <binding>
    <condition>
      <and>
			  <equals>
        <property>controls/flight/speedbrake-lever</property>
				<value>true</value>
				</equals>
				<equals>
				<property>controls/flight/flaps</property>
				<value>0</value>
				</equals>
			</and>
    </condition> 
    <command>property-assign</command>
    <property>controls/flight/speedbrake</property>
    <value type="double">1</value>
  </binding>
	<binding>
    <condition>
      <and>
			  <equals>
        <property>controls/flight/speedbrake-lever</property>
				<value>true</value>
				</equals>
				<equals>
				<property>controls/flight/flaps</property>
				<value>0</value>
				</equals>
			</and>
    </condition> 
    <command>property-assign</command>
    <property>controls/flight/flaps</property>
    <value type="double">0.35</value>
  </binding>
  <binding>
    <condition>
      <and>
			  <equals>
					<property>controls/flight/speedbrake-lever</property>
					<value>false</value>
        </equals>
				<equals>
					<property>controls/flight/flaps-lever</property>
					<value>0</value>
				</equals>
			</and>
    </condition> 
    <command>property-assign</command>
      <property>controls/flight/speedbrake</property>
      <value type="bool">false</value>
  </binding>
	<binding>
    <condition>
		  <and>
			  <equals>
					<property>controls/flight/speedbrake-lever</property>
					<value>false</value>
        </equals>
				<equals>
					<property>controls/flight/flaps-lever</property>
					<value>0</value>
				</equals>
			</and>
    </condition> 
    <command>property-assign</command>
    <property>controls/flight/flaps</property>
    <value type="double">0</value>
  </binding>
  </key>
  <!-- map keys for emergency flap lowering -->
  <key n="6">
  <name>Ctrl-F</name>
  <desc>Emergency Flap Lowering.</desc>
  <binding>
   <command>property-assign</command>
   <property>controls/flight/flaps-alternate-extension</property>
   <value type="double">0</value>
  </binding>
  <binding>
    <command>property-assign</command>
    <property>controls/flight/flaps</property>
	<value type="double">1</value>
  </binding>
  </key>
  <!-- map keys for arrester hook -->
  <key n="72">
  <name>H</name>
  <desc>Hook down.</desc>
   <binding>
     <command>property-assign</command>
     <property>controls/gear/tailhook</property>
      <value type="double">1.0</value>
    </binding>
   </key>
   <key n="104">
   <name>h</name>
   <desc>Hook Up.</desc>
    <binding>
     <command>property-assign</command>
     <property>controls/gear/tailhook</property>
     <value type="double">0.0</value>
    </binding>
   </key>
	 
	 <!-- map keys for no action -->
   <key n="107">
   <name>k</name>
   <desc>Null.</desc>
    <binding>
			<command>property-assign</command>
			<property>null</property>
			<value type="double">0</value>
    </binding>
   </key>
	 
	 <!-- map keys for seat vertical adjust -->
	 <key n="12">
   <name>CTRL-L</name>
   <desc>Seat Default.</desc>
   <binding>
		 <command>property-assign</command>
		 <property>/controls/seat/vertical-adjust</property><value type="double">0</value>
	 </binding>
	 <binding>
	   <condition>
			<equals>
				<property>sim/current-view/view-number</property>
				<value>0</value>
			</equals>
		</condition> 
		 <command>property-assign</command>
		 <property>sim/current-view/y-offset-m</property>
		 <value type="double">0.7</value>
   </binding>
  </key>
   <key n="76">
   <name>L</name>
   <desc>Seat Down.</desc>
   <binding>
		 <command>property-adjust</command>
		 <property>/controls/seat/vertical-adjust</property>
		 <step type="double">-0.01</step>
		 <min type="double">0</min>
     <max type="double">0.1</max>
   </binding>
	 <binding>
	   <condition>
			<equals>
				<property>sim/current-view/view-number</property>
				<value>0</value>
			</equals>
		</condition> 
		 <command>property-adjust</command>
		 <property>sim/current-view/y-offset-m</property>
		 <step type="double">-0.01</step>
		 <min type="double">0.64</min>
     <max type="double">0.74</max>
   </binding>
  </key>
  <key n="108">
  <name>l</name>
  <desc>Seat Up.</desc>
  <binding>
   <command>property-adjust</command>
   <property>controls/seat/vertical-adjust</property>
   <step type="double">0.01</step>
	 <min type="double">0</min>
   <max type="double">0.1</max>
  </binding>
	<binding>
	  <condition>
			<equals>
				<property>sim/current-view/view-number</property>
				<value>0</value>
			</equals>
		</condition> 
		 <command>property-adjust</command>
		 <property>sim/current-view/y-offset-m</property>
		 <step type="double">0.01</step>
		 <min type="double">0.64</min>
     <max type="double">0.74</max>
   </binding>
	</key>
   
	 <!-- map keys for wing fold -->
   <key n="70">
   <name>F</name>
   <desc>Wing Fold Down.</desc>
    <binding>
     <command>property-assign</command>
     <property>controls/flight/wing-fold</property>
     <value type="double">1.0</value>
    </binding>
   </key>
	 <key n="102">
   <name>f</name>
   <desc>Wing Fold Up.</desc>
    <binding>
     <command>property-assign</command>
     <property>controls/flight/wing-fold</property>
     <value type="double">0.0</value>
    </binding>
   </key>
   <!-- map keys for 3 flap detents up-T/O-Full -->
   <key n="91">
   <name>[</name>
   <desc>Decrease flaps.</desc>
   <binding><!-- decrease lever from t/o to up -->
			<condition>
				<and>
					<equals>
						<property>controls/flight/flaps-alternate-extension</property>
						<value>1</value>
					</equals>
					<equals>
						<property>controls/flight/flaps-lever</property>
						<value>0.35</value>
					</equals>
				</and>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/flaps-lever</property>
			<value type="double">0</value>
		</binding>
    <binding><!-- decrease lever from  full to t/o -->
			<condition>
				<and>
					<equals>
						<property>controls/flight/flaps-alternate-extension</property>
						<value>1</value>
					</equals>
					<equals>
						<property>controls/flight/flaps-lever</property>
						<value>1</value>
					</equals>
				</and>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/flaps-lever</property>
			<value type="double">0.35</value>
		</binding>
		<binding> <!-- extend airbrake if airbrake lever is at extend -->
			<condition>
				<and>
					<equals>
						<property>controls/flight/speedbrake-lever</property>
						<value>true</value>
					</equals>
					<equals>
						<property>controls/flight/flaps-lever</property>
						<value>0</value>
					</equals>
				</and>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/speedbrake</property>
			<value type="double">1</value>
		</binding>
		<binding><!-- decrease from flaps up to t/o flaps -->
			<condition>
				<equals>
					<property>controls/flight/flaps-lever</property>
					<value>0.35</value>
				</equals>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/flaps</property>
			<value type="double">0.35</value>
		</binding>
		<binding><!-- decrease from t/o to flaps flaps up -->
			<condition>
				<and>
					<equals>
						<property>controls/flight/flaps-lever</property>
						<value>0</value>
					</equals>
					<equals>
					  <property>controls/flight/speedbrake-lever</property>
					  <value>false</value>
					</equals>
				</and>		
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/flaps</property>
			<value type="double">0</value>
		</binding>
  </key>
  <key n="93">
		<name>]</name>
		<desc>Increase flaps.</desc>
		<binding><!-- increase lever from t/o to full -->
			<condition>
				<and>
					<equals>
						<property>controls/flight/flaps-alternate-extension</property>
						<value>1</value>
					</equals>
					<equals>
						<property>controls/flight/flaps-lever</property>
						<value>0.35</value>
					</equals>
				</and>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/flaps-lever</property>
			<value type="double">1</value>
		</binding>
		<binding><!-- increase from lever up to t/o flaps -->
			<condition>
				<and>
					<equals>
						<property>controls/flight/flaps-alternate-extension</property>
						<value>1</value>
					</equals>
					<less-than-equals>
						<property>controls/flight/flaps-lever</property>
						<value>0</value>
					</less-than-equals>
				</and>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/flaps-lever</property>
			<value type="double">0.35</value>
		</binding>
		<binding><!-- retract airbrake if flap lever is moved -->
			<condition>
				<and>
					<equals>
						<property>controls/flight/flaps-alternate-extension</property>
						<value>1</value>
					</equals>
					<greater-than>
						<property>controls/flight/flaps-lever</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/speedbrake</property>
			<value type="double">0</value>
		</binding>
		<binding> <!-- increase from flaps up to t/o flaps -->
			<condition>
				<equals>
					<property>controls/flight/flaps-lever</property>
					<value>0.35</value>
				</equals>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/flaps</property>
			<value type="double">0.35</value>
		</binding>
		<binding><!-- increase from flaps up to t/o flaps -->
			<condition>
				<equals>
					<property>controls/flight/flaps-lever</property>
					<value>1</value>
				</equals>
			</condition> 
			<command>property-assign</command>
			<property>controls/flight/flaps</property>
			<value type="double">1</value>
		</binding>
		</key>
  </keyboard>
  
 </input>


</PropertyList>


