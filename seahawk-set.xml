	<!-- *************** set properties **********************-->
	<!--parking brake ON -->
	<!-- nosewheel lock OFF -->
	<controls>
		<engines>
			<engine n="0">
				<fuel-cock>
					<lever type="double">1</lever>
				</fuel-cock>
			</engine>
		</engines>
		<gear>
			<brake-parking>1</brake-parking>
			<tailwheel-lock>true</tailwheel-lock>
		</gear>
		<flight>
			<flaps-alternate-extension type="double">1</flaps-alternate-extension>
			<speedbrake-lever type="bool">false</speedbrake-lever>
			<flaps-lever type="double">0</flaps-lever>
		</flight>
		<lighting>
			<nav-lights>false</nav-lights>
		</lighting>
	</controls>

	<!-- ************Instrumentation ************************* -->
	<instrumentation>
		<path>Aircraft/seahawk/Systems/seahawk-instrumentation.xml</path>
		<tacan n="0">
			<serviceable type="bool" archive="y">true</serviceable>
			<switch-position type="int" archive="y">1</switch-position>
		</tacan>
		<!-- hsi heading bug and source select-->
		<heading-indicator>
			<heading-bug-deg type="double">95</heading-bug-deg>
			<heading-source type="bool">true</heading-source>
		</heading-indicator>
	</instrumentation>

	<!-- **************** map keyboard input ********************** -->
	<input>
		<keyboard include="../../Input/Keyboard/carrier-bindings.xml">
			<key n="2">
				<name>Ctrl-B</name>
				<desc>Toggle speedbrake.</desc>
				<binding>
					<command>nasal</command>
					<script>
						seahawk.toggleAirbrake();
					</script>

				</binding>
			</key>

			<!-- map keys for emergency flap lowering -->
			<key n="6">
				<name>Ctrl-F</name>
				<desc>Emergency Flap Lowering.</desc>
				<binding>
					<command>property-assign</command>
					<property>controls/flight/flaps-alternate-extension</property>
					<value type="double">0</value>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>controls/flight/flaps</property>
					<value type="double">1</value>
				</binding>
			</key>

			<!-- map keys for no action -->
			<key n="72">
				<name>H</name>
				<desc>Null.</desc>
				<binding>
					<command>property-assign</command>
					<property>null</property>
					<value type="double">0</value>
				</binding>
			</key>
			<key n="104">
				<name>h</name>
				<desc>Null.</desc>
				<binding>
					<command>property-assign</command>
					<property>null</property>
					<value type="double">0</value>
				</binding>
			</key>
			<key n="107">
				<name>k</name>
				<desc>Null.</desc>
				<binding>
					<command>property-assign</command>
					<property>null</property>
					<value type="double">0</value>
				</binding>
			</key>
			<key n="108">
				<name>l</name>
				<desc>Null.</desc>
				<binding>
					<command>property-assign</command>
					<property>null</property>
					<value type="double">0</value>
				</binding>
			</key>

			<!-- map keys for seat vertical adjust -->
			<key n="21">
				<name>CTRL-U</name>
				<desc>Seat Default.</desc>
				<binding>
					<command>property-assign</command>
					<property>/controls/seat/vertical-adjust</property>
					<value type="double">-0.0445</value>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>0</value>
						</equals>
					</condition>
					<command>property-assign</command>
					<property>sim/current-view/y-offset-m</property>
					<value type="double">0.67</value>
				</binding>
			</key>
			<key n="85">
				<name>U</name>
				<desc>Seat Down.</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/seat/vertical-adjust</property>
					<step type="double">-0.01</step>
					<min type="double">-0.1</min>
					<max type="double">0.1</max>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>0</value>
						</equals>
					</condition>
					<command>property-adjust</command>
					<property>sim/current-view/y-offset-m</property>
					<step type="double">-0.01</step>
					<min type="double">0.64</min>
					<max type="double">0.74</max>
				</binding>
			</key>
			<key n="117">
				<name>u</name>
				<desc>Seat Up.</desc>
				<binding>
					<command>property-adjust</command>
					<property>controls/seat/vertical-adjust</property>
					<step type="double">0.01</step>
					<min type="double">-0.1</min>
					<max type="double">0.1</max>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>0</value>
						</equals>
					</condition>
					<command>property-adjust</command>
					<property>sim/current-view/y-offset-m</property>
					<step type="double">0.01</step>
					<min type="double">0.64</min>
					<max type="double">0.74</max>
				</binding>
			</key>

			<!-- map keys for flap lever -->
			<key n="91">
				<name>[</name>
				<desc>Decrease flap lever.</desc>
				<binding>
					<condition>
						<equals>
							<property>controls/flight/flaps-alternate-extension</property>
							<value>1</value>
						</equals>
					</condition>
					<command>nasal</command>
					<script>
						seahawk.adjustFlaps(0);
					</script>
				</binding>
			</key>
			<key n="93">
				<name>]</name>
				<desc>Increase flap lever.</desc>
				<binding>
					<condition>
						<equals>
							<property>controls/flight/flaps-alternate-extension</property>
							<value>1</value>
						</equals>
					</condition>
					<command>nasal</command>
					<script>
						seahawk.adjustFlaps(1);
					</script>
				</binding>
			</key>
		</keyboard>
	</input>

  <!-- weights -->
  <yasim>
    <weights>
      <pilot-lb type="double">200</pilot-lb>
    </weights>
  </yasim>
  
	<nasal>
		<seahawk>
			<file>Aircraft/seahawk/Models/seahawk.nas</file>
		</seahawk>
		<!--<seahawk>
			<file>Aircraft/seahawk/Models/droptanks.nas</file>
		</seahawk>-->
		<seahawk-fuel>
			<module>fuel</module>
			<file>Aircraft/seahawk/Models/fuel-cocks.nas</file>
		</seahawk-fuel>
		<recoil>
			<file>Aircraft/seahawk/Models/recoil.nas</file>
		</recoil>
	</nasal>
	
	<environment>
		<params>
			<contrail-altitude>50000</contrail-altitude>
		</params>
	</environment>
	
</PropertyList>
