<PropertyList>
 <sim>
  <flight-model>yasim</flight-model>
  <status>early-production</status>
  <aero>seahawk-3d-yasim</aero>
  <fuel-fraction>1.0</fuel-fraction>
 
  <systems>

	 <autopilot>
    <path>Aircraft/seahawk/Systems/seahawk-autopilot.xml</path>
   </autopilot>

   <electrical>
    <path>Aircraft/seahawk/Systems/seahawk-electrical.xml</path>
   </electrical>
  </systems>
	 
  <sound>
   <path>Aircraft/seahawk/Sounds/seahawk-sound.xml</path>
  </sound>

  <!-- hide the 2D panel -->
  <panel>
   <visibility archive="n">false</visibility>
  </panel>
 
 
 <!-- no HUD --> 
  <hud>
   <path>Huds/Default/default.xml</path>
   <visibility>false</visibility>
  </hud>

  <model>
   <path>Aircraft/seahawk/Models/seahawk-3d-model.xml</path>
  </model>
  <!-- x="3.0" y="0.0" z="0.7" -->
  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <x-offset-m archive="y">0</x-offset-m>
    <y-offset-m archive="y">0.7</y-offset-m>
    <z-offset-m archive="y">-3.24</z-offset-m>
    <pitch-offset-deg>-15</pitch-offset-deg> 
    <default-field-of-view-deg>60</default-field-of-view-deg>
   </config>
  </view>

  <chase-distance-m type="double" archive="y">-30.0</chase-distance-m>
 </sim>
