<PropertyList>
	<sim>
		<author type="string">Lee Elliott, Vivian Meazza</author>
		<description type="string">Hawker Seahawk FGA6</description>
		<status type="string"> string>early-production</status>
		<flight-model>yasim</flight-model>
		<aero>seahawk-3d-yasim</aero>
		<fuel-fraction>0.25</fuel-fraction>
		<systems>
			<autopilot>
				<path>Aircraft/seahawk/Systems/seahawk-autopilot.xml</path>
			</autopilot>
			<electrical>
				<path>Aircraft/seahawk/Systems/seahawk-electrical.xml</path>
			</electrical>
		</systems>
		<ai>
			<aircraft>
				<exhaust type="bool">false</exhaust>
			</aircraft>
			<submodels>
				<contrails type="bool">true</contrails>
			</submodels>
		</ai>
		<submodels> 
        <serviceable type="bool">true</serviceable>
        <path>Aircraft/seahawk/Models/seahawk-submodels.xml</path>
      </submodels>
		<sound>
			<path>Aircraft/seahawk/Sounds/seahawk-sound.xml</path>
		</sound>
		<!-- hide the 2D panel -->
		<panel>
			<visibility archive="n">false</visibility>
		</panel>
		<!-- no HUD -->
		<hud>
			<path>Huds/Default/default.xml</path>
			<visibility>false</visibility>
		</hud>
		<model>
			<path>Aircraft/seahawk/Models/seahawk-3d-model.xml</path>
		</model>
		<!-- x="3.0" y="0.0" z="0.7" -->
		<view n="0">
			<internal archive="y">true</internal>
			<config>
				<x-offset-m archive="y">0</x-offset-m>
				<y-offset-m archive="y">0.7</y-offset-m>
				<z-offset-m archive="y">-3.24</z-offset-m>
				<pitch-offset-deg>-15</pitch-offset-deg>
				<default-field-of-view-deg>60</default-field-of-view-deg>
			</config>
		</view>
		<chase-distance-m type="double" archive="y">-30.0</chase-distance-m>
		<help>
			<key>
				<name>Ctrl-B</name>
				<desc>toggle speedbrake</desc>
			</key>
			<key>
				<name>C</name>
				<desc>catapult launch command</desc>
			</key>
			<key>
				<name>f/F</name>
				<desc>wing fold up/down</desc>
			</key>
			<key>
				<name>Ctrl-F</name>
				<desc>emergency flap lowering</desc>
			</key>
			<key>
				<name>L</name>
				<desc>launch-bar engage</desc>
			</key>
			<key>
				<name>o/O</name>
				<desc>hook up/down</desc>
			</key>
			<key>
				<name>u/U</name>
				<desc>seat up/down</desc>
			</key>
			<key>
				<name>Ctrl-U</name>
				<desc>seat default</desc>
			</key>
		</help>
		<flaps>
			<setting>0.00</setting>
			<setting>0.3</setting>
			<setting>1.00</setting>
		</flaps>
		<consumables>
			<fuel>
				<tank n="0">
					<name type="string">Fwd</name>
					<level-gal_us>300</level-gal_us>
					<selected type="bool">1</selected>
				</tank>
				<tank n="1">
					<name type="string">Aft</name>
					<level-gal_us>300</level-gal_us>
					<selected type="bool">1</selected>
				</tank>
				<tank n="2">
					<name type="string">Saddle</name>
					<level-gal_us>180</level-gal_us>
					<selected type="bool">0</selected>
				</tank>
			</fuel>
		</consumables>
	</sim>

